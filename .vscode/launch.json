    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Email Cleaner",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/tasks/email_cleaner.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "Run Daily Email Reports",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/tasks/daily_email_reports.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        }
    ]
}